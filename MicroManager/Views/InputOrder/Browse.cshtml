 @model IEnumerable<MicroManager.Models.Product>

     <h1> Briwse View - Build the Customer's Order Here______</h1>

@if (ViewBag.ProductCategory != null)
{
    <h2>@ViewBag.productCategories</h2>
}
 
<section>
    <div class="row">
        @foreach (var p in Model)
        {
            <div class="col-sm-6 col-lg-4 mb-3">
                <div class="card mb-3 text-center h-100">
                    <div class="card-body">
                        <a asp-controller="Product" asp-action="Details" asp-route-id="@p.ProductId">@p.Seeds.Type</a>
                    </div>
                </div>
            </div>
        }
    </div>
</section>
