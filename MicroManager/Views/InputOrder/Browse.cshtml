@model IEnumerable<MicroManager.Models.Product>

    <h1> Briwse View - Build the Customer's Order Here______</h1>

@if (ViewBag.ProductCategory != null)
{
    <h2>@ViewBag.productCategory</h2>
}

<section>
    <div class="row">

        @foreach (var p in Model)
        {
            <div class="col-sm-6 col-lg-4 mb-3">
                <div class="card mb-3 text-center h-100">
                    <div class="card-body">
                        <a asp-controller="InputOrder" asp-action="Browse" asp-route-id="@p.ProductCategory_Id">@p.ProductSize</a>
                    </div>
                </div>
            </div>
        }
    </div>
</section>
