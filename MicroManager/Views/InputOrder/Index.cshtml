@model IEnumerable<MicroManager.Models.ProductCategory>

@{
    ViewData["Title"] = "Product Categories";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Build your Customer's Order'</h1>

<section>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-sm-6 col-lg-4 mb-3">
                <div class="card mb-3 text-center h-100">
                    <div class="card-body">
                        <h5> <a asp-controller="InputOrder" asp-action="Browse" asp-route-id="@item.ProductCategoryId">@item.ProductName</a></h5>
                    </div>
                </div>
            </div>
        }
    </div>
</section>