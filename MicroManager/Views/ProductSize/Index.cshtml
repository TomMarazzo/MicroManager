@model IEnumerable<MicroManager.Models.ProductSize>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Product Sizes to Sell</h1>

<p>
    <a asp-action="Create"class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Size)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Size)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProductSizeId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ProductSizeId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ProductSizeId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
