@model IEnumerable<MicroManager.Models.InventoryCategory>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Categories</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.InventoryCategoryType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            
            <tr>
                <td>
                                @Html.DisplayFor(modelItem => item.InventoryCategoryType)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.InventoryCategoryId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.InventoryCategoryId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.InventoryCategoryId">Delete</a>
                </td>
            </tr>
            
        }
    </tbody>
</table>
@* InventoryCategoryType *@