@model MicroManager.Models.Product

@{
    ViewData["Title"] = "Product Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Product Details</h1>
<div>    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Seeds)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Seeds.Type)
        </dd>
        <dt class = "col-sm-2">
            Product Size
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductSize.Size)
        </dd>
        <dt class = "col-sm-2">
            Product Category
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductCategory.ProductName)
        </dd>
    </dl>
</div>

@* Form to add Quantity for the shopping cart *@
<form method="post" action="/InputOrder/Cart" class="offset-2">
    @* Hidden Field for the selected ProductId *@
    <input type="hidden" id="ProductId" name="ProductId" value="@Model.ProductId" /> @* Needs to replace p with Model  *@
    <div class="form-group">
        <label class="control-label" for="Quantity">Quantity: </label>
        <input name="Quantity" id="Quantity" required min="1" max="99999" type="number" class="input-small" />
    </div>
    <br />
    <button class="btn btn-outline-primary">Add To Order</button>
</form>
<a href="javascript:history.go(-1);"><< Back</a>

