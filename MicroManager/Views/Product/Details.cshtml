@model MicroManager.Models.Product

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Product Details</h1>

<div>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Seeds)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Seeds.Type)
        </dd>
        <dt class = "col-sm-2">
          Product Size
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductSize.Size)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            Inventory Category
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.InventoryCategory.InventoryCategoryType)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ProductId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
