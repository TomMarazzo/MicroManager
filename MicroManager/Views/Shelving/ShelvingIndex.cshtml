@model MicroManager.Controllers.ShelvingController.ShelvingViewModel //Changed to do calcs on screen

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Shelving Purchases</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Shelf</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Date
            </th>
            <th>
                Qty
            </th>
            <th>
                Price
            </th>
            <th>
                Tax
            </th>
            <th>
            <th>
                Total Price
            </th>
                Row
            </th>
            <th>
                Column
            </th>
            <th>
               Supplier
            </th>
            <th>
                Total Grow Spaces
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Shelving) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Qty)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tax)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Total)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Row)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Column)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalGrowSpaces)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Supplier.CompanyName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ShelvingId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ShelvingId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ShelvingId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
Total Purchase Prices @string.Format("${0:0.##}", (double)Model.TotalPurchasePrice)
 Total Grow Spaces @string.Format("${0:0.##}",(double)Model.TotalGrowSpaces) 